<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Header com o nome do curso e ícone da aula -->


        <TextView
            android:id="@+id/txt_quiz_titulo"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:layout_below="@+id/aula_imagem"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="254dp"
            android:background="@drawable/listacursos"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Quiz"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#469FD1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Ícone da aula à esquerda -->
            <ImageView
                android:id="@+id/iconeAula"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/bacia" />

            <!-- Nome do curso à direita -->
            <TextView
                android:id="@+id/txt_nome_curso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:paddingStart="16dp"
                android:text="Nome do Curso"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Layout para o título da aula -->

        <!-- Vídeo (Substitua com o componente de vídeo apropriado) -->

        <!-- Botões das alternativas -->

        <LinearLayout
            android:id="@+id/aulaLayout"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <!-- Título da aula -->
            <TextView
                android:id="@+id/txt_aula_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Aula 1 - Nome da Aula"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/aula_imagem"
            android:layout_width="380dp"
            android:layout_height="197dp"
            android:layout_below="@id/aulaLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/playbutton" />

        <TextView
            android:id="@+id/txt_aula_descricao"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aula_imagem"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="244dp"
            android:fontFamily="@font/baloo"
            android:text="Video"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_above="@+id/btn_prox_aula"
            android:layout_below="@+id/txt_quiz_descricao"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="42dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btn_quiz_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/btn_quiz_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/btn_quiz_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto "
                android:textColor="#000000" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_prox_aula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/botaonaotemconta"
            android:backgroundTint="#67BAE8"
            android:text="Proxima Aula" />

        <TextView
            android:id="@+id/txt_quiz_descricao"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_below="@+id/txt_quiz_titulo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="26dp"
            android:text="TextView" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
