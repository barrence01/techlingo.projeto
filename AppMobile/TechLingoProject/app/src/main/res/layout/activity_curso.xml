<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:background="#469FD1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Imagem do logotipo -->
        <ImageView
            android:id="@+id/imageViewFooter"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />

        <!-- Texto "Bem-vindo ao TECHLINGO" -->
        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:padding="16dp"
            android:text="TECHLINGO"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_aula3"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_aula2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/listacursos"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="    Aula 03"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_status_aula3"
        :layout_marginStart="205dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_aula3"
        android:layout_alignStart="@+id/btn_aula3"
        android:layout_alignTop="@+id/btn_aula3"
        android:layout_alignEnd="@+id/btn_aula3"
        android:layout_alignBottom="@+id/btn_aula3"
        android:layout_marginStart="190dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_aula4"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_aula3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/listacursos"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="    Aula 04"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_status_aula4"
        :layout_marginStart="205dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_aula4"
        android:layout_alignStart="@+id/btn_aula4"
        android:layout_alignTop="@+id/btn_aula4"
        android:layout_alignEnd="@+id/btn_aula4"
        android:layout_alignBottom="@+id/btn_aula4"
        android:layout_marginStart="191dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_aula2"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_aula1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/listacursos"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="    Aula 02"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_status_aula2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_aula2"
        android:layout_alignStart="@+id/btn_aula2"
        android:layout_alignTop="@+id/btn_aula2"
        android:layout_alignEnd="@+id/btn_aula2"
        android:layout_alignBottom="@+id/btn_aula2"
        android:layout_marginStart="191dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_curso_status"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_curso_data_entrada"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="42dp"
        android:layout_toEndOf="@+id/textView4"
        android:fontFamily="@font/baloo"
        android:text="In Progress"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_curso_data_entrada"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="171dp"
        android:layout_toEndOf="@+id/txt_fixo_data"
        android:fontFamily="@font/baloo"
        android:text="dd/mm/yyyy"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#469FD1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Ícone da aula à esquerda -->
        <ImageView
            android:id="@+id/iconeAula"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/bacia" />

        <!-- Nome do curso à direita -->
        <TextView
            android:id="@+id/txt_nome_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:paddingStart="16dp"
            android:text="Nome do Curso"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_fixo_data"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@+id/headerLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-6dp"
        android:fontFamily="@font/baloo"
        android:text="Data entrada:"
        android:textColor="#000000"
        android:textStyle="bold" />


    <!-- Repetir o botão de aula mais quatro vezes para criar os outros botões -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_fixo_data"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/baloo"
        android:text="Status:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_aula1"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/listacursos"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="    Aula 01"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_status_aula1"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_aula1"
        android:layout_alignStart="@+id/btn_aula1"
        android:layout_alignTop="@+id/btn_aula1"
        android:layout_alignEnd="@+id/btn_aula1"
        android:layout_alignBottom="@+id/btn_aula1"
        android:layout_marginStart="191dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="14dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="114dp"
        android:text="Aulas"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />


</RelativeLayout>
